<% include partials/header.ejs %>

    <div class="text-center mb-1">
        <h1>Inscription/Radiation</h1>
    </div>

    <div class="container">

        <table class="table table-dark text-center">
            <thead>
                <tr>
                    <th scope="col">Identifiant</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Date de naissance</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Code Postal</th>
                    <th scope="col">Commune</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Niveau</th>
                    <th scope="col">Radiation</th>
                </tr>
            </thead>
            <tbody>
                <% listeEleves.forEach(function(eleve){%>
                    <tr>

                        <th scope="row">
                            <%= eleve._id %>
                        </th>
                        <td>
                            <%= eleve.Prenom %>
                        </td>
                        <td>
                            <%= eleve.Nom %>
                        </td>
                        <td>
                            <%= eleve.DateNaissance %>
                        </td>
                        <td>
                            <%= eleve.Adresse %>
                        </td>
                        <td>
                            <%= eleve.Cpostal %>
                        </td>
                        <td>
                            <%= eleve.Ville %>
                        </td>

                        <td>
                            <%= eleve.Telephone %>
                        </td>
                        <td>
                            <%= eleve.Niveau %>
                        </td>

                        <td><a class="btn btn-danger" href="/radiation/<%= eleve._id %>" role="button">Radier</a></td>

                    </tr>
                    <%}) %>
            </tbody>
        </table>

        <p>Ajouter un élève:</p>

        <form action="/inscription" method="post">
            <div>
                <label for="Prenom">Prenom :</label>
                <input type="text" id="Prenom" name="prenom" required>
            </div>
            <div>
                <label for="name">Nom :</label>
                <input type="text" id="Nom" name="nom" required>
            </div>
<div>
                <label for="naissance">Date de naissance :</label>
                <input type="text" id="Naissance" name="naissance" required>
            </div>
            <div>
                <label for="Adresse">Adresse :</label>
                <input type="text" id="Adresse" name="adresse" required>
            </div>
            <div>
                <label for="cpostal">Code Postal :</label>
                <input type="text" id="Cpostal" name="cpostal" required>
            </div>
            <div>
                <label for="ville">Ville :</label>
                <input type="text" id="Ville" name="ville" required>
            </div>
            <div>
                <label for="telephone">Téléphone :</label>
                <input type="text" id="Telephone" name="telephone" required>
            </div>
            <div>
                <label for="niveau">Niveau :</label>
                <input type="text" id="Niveau" name="niveau" required>
            </div>
            
            <button type="submit" >Inscrire</button>
        </form>



    </div>

    <div class="text-center mt-2">
        <a href="/menu_enseignant">
            <button type="button">Retour menu</button>
        </a>
    </div>

    <% include partials/footer.ejs %>